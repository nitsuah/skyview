################################################################################
# Skyview Project - Environment Variables                                       #
#                                                                              #
# This file provides a template for configuring the Skyview application.       #
# Copy this file to .env and replace the placeholder values with your actual   #
# configuration.  Do NOT commit your .env file to version control.           #
################################################################################

# ------------------------------------------------------------------------------
# Application
# ------------------------------------------------------------------------------

NODE_ENV=development # Application environment (development, production, test)
PORT=3000 # Port the application will listen on
APP_URL=http://localhost:3000 # Base URL of the application

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------

DATABASE_URL=postgresql://your_username:your_password@your_host:5432/your_database # Connection string for the database

# ------------------------------------------------------------------------------
# Authentication & Security
# ------------------------------------------------------------------------------

# WARNING: Replace the following secrets with strong, random values before deploying to production!
JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING # Secret key for signing JSON Web Tokens (JWTs)
SESSION_SECRET=CHANGE_ME_TO_RANDOM_STRING # Secret key for session management
# API_KEY=TODO: VALUE_NEEDED # API key for accessing the application

# ------------------------------------------------------------------------------
# External APIs
# ------------------------------------------------------------------------------

MAPBOX_API_KEY=YOUR_MAPBOX_API_KEY # API key for Mapbox
# S3_BUCKET_NAME=TODO: VALUE_NEEDED # AWS S3 bucket name for storing files

# ------------------------------------------------------------------------------
# Runtime Configuration
# ------------------------------------------------------------------------------

LOG_LEVEL=info # Logging level (e.g., debug, info, warn, error)
ENABLE_HTTPS=false # Enable HTTPS (true/false)
# REDIS_URL=redis://localhost:6379/0 # Connection string for Redis (optional)